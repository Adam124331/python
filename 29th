num = int(input("Enter a number: "))
if num % 2 == 0:
    print(num, "is even")
else:
    print(num, "is odd")
    
    
----------------------------------------------------------------------------------------------------------------------------------

2) number representation is in binary

----------------------------------------------------------------------------------------------------------------------------------

num = input("Enter a number: ")
if all(char in '01' for char in num):
    print(num, "is a binary number")
else:
    print(num, "is not a binary number")
    
----------------------------------------------------------------------------------------------------------------------------------
 
 3)sum of digits
 
----------------------------------------------------------------------------------------------------------------------------------
 
 
def getSum(n):
     
    strr = str(n)
    list_of_number = list(map(int, strr.strip()))
    return sum(list_of_number)
   
n = 569
print(getSum(n))

