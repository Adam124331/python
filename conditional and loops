# condtional statements

age = int(input("Enter  your age " )

if(age > = 20 AND age <50) :

    print(" You are in your youth")
    
elif (age < 20 ) :
  
  print("you are in your childhood")
  
else :
  
  print("you are a wise person")
  
  
