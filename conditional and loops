#looping statements

for i in range(0,100):
  if(i == 50):
    break
    
  else:
    print(i)
    
-----------------------------------------------------------------------------------------------------

for i in range(0,100):
  if(i == 50):
    continue
    
  else:
    print(i)
    
    
-------------------------------------------------------------------------------------------------------

count = int(input("please set the count value to be more than 20 ")

while ( count < 20):
    print(count)
    count -= 1
    
    
    
---------------------------------------------------------------------------------------------------------

# nested loops

for rows in range(1,5):
  for cols in range(1,5):
    print("*")
    
    
--------------------------------------------------------------------------------------------------------------

